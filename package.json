{
  "name": "graphql-api",
  "version": "1.0.0",
  "description": "GraphQL API",
  "main": "index.js",
  "scripts": {
    "build": "tsc",
    "start": "pm2 start dist/src/index.js --name 'graphql-api'",
    "stop": "pm2 stop graphql-api",
    "dev": "nodemon --watch src --exec tsx src/index.ts",
    "migrate": "prisma migrate dev --name init",
    "seed": "prisma generate && tsx prisma/seed.ts",
    "lint": "eslint src/**/*.ts --fix",
    "prettier": "prettier --write 'src/**/*.{js,ts,json,md}'",
    "fix": "eslint src/**/*.ts --fix && prettier --write 'src/**/*.{js,ts,json,md}'",
    "test": "jest",
    "test:coverage": "jest --coverage"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/jm-altrina/osc-technical-test.git"
  },
  "keywords": [
    "GraphQL",
    "API"
  ],
  "author": "JMathew",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/jm-altrina/osc-technical-test/issues"
  },
  "homepage": "https://github.com/jm-altrina/osc-technical-test#readme",
  "dependencies": {
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.1",
    "dataloader": "^2.2.3",
    "dotenv": "^16.4.7",
    "envalid": "^8.0.0",
    "express": "^4.21.2",
    "express-rate-limit": "^7.4.1",
    "graphql": "^15.9.0",
    "graphql-http": "^1.22.3",
    "node-cache": "^5.1.2",
    "pg": "^8.13.1",
    "pm2": "^5.4.3",
    "prisma": "^6.0.1",
    "reflect-metadata": "^0.2.2",
    "type-graphql": "^1.1.1",
    "winston": "^3.17.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.16.0",
    "@faker-js/faker": "^9.3.0",
    "@prisma/client": "^6.0.1",
    "@types/bcrypt": "^5.0.2",
    "@types/express": "^5.0.0",
    "@types/jest": "^29.5.14",
    "@types/jsonwebtoken": "^9.0.7",
    "@types/node": "^22.10.1",
    "@types/pg": "^8.11.10",
    "@typescript-eslint/eslint-plugin": "^8.17.0",
    "@typescript-eslint/parser": "^8.17.0",
    "bcrypt": "^5.1.1",
    "eslint": "^9.16.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-define-config": "^2.1.0",
    "eslint-plugin-prettier": "^5.2.1",
    "globals": "^15.13.0",
    "jest": "^29.7.0",
    "jest-mock-extended": "^4.0.0-beta1",
    "jsonwebtoken": "^9.0.2",
    "mockingoose": "^2.16.2",
    "nodemon": "^3.1.7",
    "prettier": "^3.4.2",
    "ts-jest": "^29.2.5",
    "ts-node": "^10.9.2",
    "tsx": "^4.19.2",
    "typescript": "^5.7.2",
    "typescript-eslint": "^8.17.0"
  }
}
